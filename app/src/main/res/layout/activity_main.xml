<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#437ae8"
    android:orientation="vertical"
    tools:context="com.example.pazera.mkoi.MainActivity"
    android:weightSum="1"


    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorytm BBS"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:id="@+id/bbsButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorytm RSA"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:id="@+id/rsaButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorytm BM"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:id="@+id/bmButton"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:minLines="2"
            android:maxLines="2"
            android:text="Test statystyczny"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:id="@+id/statisticTestButton"
            android:layout_weight="1"

            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:minLines="2"
            android:maxLines="2"
            android:text="Test Chi-kwadrat"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"


            android:id="@+id/chiTestButton"
            android:layout_weight="1"


            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:minLines="2"
            android:maxLines="2"
            android:text="Test Monte-Carlo"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"


            android:id="@+id/mcTestButton"
            android:layout_weight="1"


            />


    </LinearLayout>



</LinearLayout>
